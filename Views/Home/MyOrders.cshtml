@model MainPageModel

@{
    ViewData["Title"] = "MyOrders";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<!-- My Orders Table start  -->
<div class="wishlist-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 ">
                <div class="cart-wrapper table-responsive">
                    <table class="shop_table cart ">
                        <thead>
                            <tr>
                                <th class="product-price">SİPARİŞ NO</th>
                                <th colspan="2" class="product-name">ÜRÜN ADI</th>
                                <th class="product-price">TARİH</th>
                                <th class="product-price">ADET</th>
                                <th class="product-price">FİYAT</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.MyOrders)
                            {
                                <tr class="cart_item">

                                    <td class="product-name">
                                        <a href="">@item.OrderGroupGUID</a>
                                    </td>

                                    <td class="product-thumbnail">
                                        <a href="/Home/Details/@item.ProductID"><img width="%100" height="%100" alt="04" class="attachment-shop_thumbnail wp-post-image" src="~/img/@item.PhotoPath"></a>
                                    </td>

                                    <td class="product-name">
                                        <a href="">@item.ProductName</a>
                                    </td>

                                    <td class="product-name">
                                        <a href="">@item.OrderDate</a>
                                    </td>

                                    <td class="product-name">
                                        <a href="">@item.Quantity</a>
                                    </td>

                                    <td class="product-name">
                                        <a href="">@item.UnitPrice ₺</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- My Orders Table end  -->

    <div id="product-tab">
        <!-- product tab nav -->
        <ul class="tab-nav">

            <li style="font-size:20px;"><a data-toggle="tab">BUNA BAKANLAR</a></li>

        </ul>
        <!-- /product tab nav -->
        
    </div>


<!-- Section -->
<div class="section" style="display:flex">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

       
            <!-- Products tab & slick -->
            <div class="col-md-12">
                <div class="row ">
                    <div class="products-tabs">
                        <!-- tab -->
                        <div id="tab2" class="tab-pane fade in active">
                            <div class="products-slick" data-nav="#slick-nav-2">
                                <!-- product -->
                                @foreach (var item in Model.RealetedProducts)
                                {
                                    <div class="product ">
                                        <div class="product-img">
                                            <img class="my-size" src="~/img/@item.PhotoPath" alt="">
                                            <div class="product-label">
                                            </div>
                                        </div>
                                        <div class="product-body">

                                            <h3 class="product-name"><a href=/Home/Details/@item.ProductID>@item.ProductName</a></h3>
                                            <h4 class="product-price">@item.UnitPrice ₺ </h4>
                                            <div class="product-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <div class="product-btns">
                                                <a href="/Home/Details/@item.ProductID" title="Detayları Göster"> <i class="fa fa-eye"></i> </a>
                                            </div>
                                        </div>
                                        <div class="add-to-cart">
                                            <a href="/Home/CartProcess/@item.ProductID">
                                                <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> SEPETE EKLE</button>
                                            </a>
                                        </div>
                                    </div>
                                }

                                <!-- /product -->
                            </div>
                            <div id="slick-nav-2" class="products-slick-nav"></div>
                        </div>

                        <!-- /tab -->

                    </div>

                </div>

            </div>

            <!-- /Products tab & slick -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /Section -->
