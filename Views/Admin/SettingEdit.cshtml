@model Setting
@{
    ViewData["Title"] = "SettingEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">

    <div class="col-md-2"></div>

    <div class="col-md-8 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box green ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> AYAR DÜZELTME FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/SettingEdit" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Email</label>
                            <div class="col-md-9">
                                <input asp-for="Email" class="form-control input-lg" placeholder="Email" required maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Telefon</label>
                            <div class="col-md-9">
                                <input asp-for="Telephone" class="form-control input-lg" placeholder="Telefon" required maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Adres</label>
                            <div class="col-md-9">
                                <input asp-for="Address" class="form-control input-lg" placeholder=" Adres" required maxlength="100" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="MainpageCount" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-lg" placeholder="Ana Sayfada Gösterilen Ürün Sayısı" asp-for="MainpageCount" required maxlength="100">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="SubpageCount" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-lg" placeholder="Alt Sayfada Gösterilen Ürün Sayısı" asp-for="SubpageCount" required maxlength="100">
                            </div>
                        </div>




                        <input type="hidden" asp-for="SettingID" />

                    </div>
                    <div class="form-actions right1">
                        <a asp-action="SettingIndex" class="btn btn-primary">AYAR LİSTESİ</a>
                        <input type="submit" name="name" value="DÜZELT" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
